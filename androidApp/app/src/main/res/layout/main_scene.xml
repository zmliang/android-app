<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_scene">

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_fileName="scene.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:id="@+id/scene_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/speak_english"/>

    <ImageButton
        android:id="@+id/speak_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/icon_share"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/level_icon"
        android:layout_toEndOf="@+id/level_icon" />

    <ImageButton
        android:id="@+id/play_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:srcCompat="@drawable/icon_share"
        android:layout_below="@+id/scene_animation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:transitionName="square"
        android:id="@+id/level_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/group0_1" />
</RelativeLayout>