<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alert_bg"
    android:orientation="vertical"
    android:theme="@style/AlertDialogStyle">
    <TextView
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:id="@+id/shared_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐给好友"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_below="@+id/shared_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/shared_wechat_friend"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_wechatfriends"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:id="@+id/shared_wechat_zone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_wechat" />

        <ImageButton
            android:id="@+id/shared_qq"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_qq" />

        <ImageButton
            android:id="@+id/shared_weibo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_qqzone" />
    </LinearLayout>
</RelativeLayout>